<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LargeTitle" parent="TextAppearance.Regular">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">38dp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Regular">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.Regular">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="NoticeAppearance" parent="TextAppearance.Regular">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20dp</item>
    </style>
</resources>