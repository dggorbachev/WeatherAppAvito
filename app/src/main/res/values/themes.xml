<resources>
    <!-- Base application theme. -->
    <style name="Theme.WeatherAppAvito" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/light_theme_color_back_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="regionColor">@color/light_theme_color_label_primary</item>
        <item name="titleColor">@color/light_theme_color_label_secondary</item>
        <item name="appBackgroundColor">@color/light_theme_color_back_primary</item>
        <item name="menuItemColor">@color/light_theme_color_label_primary</item>
        <item name="separatorColor">@color/light_theme_color_support_overlay</item>
        <item name="weekInfoColor">@color/light_theme_color_support_overlay</item>
    </style>

    <style name="Theme.WeatherAppAvito.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatherAppAvito.ToolBar" />

    <style name="Theme.WeatherAppAvito.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeatherAppAvito.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>